      });
    </script>
    
    <!-- CSS m√≠nimo para ConveyThis -->
    <style>
      /* Permitir que ConveyThis se muestre correctamente */
      #conveythis-language-selector {
        display: inline-block !important;
        position: relative;
        z-index: 1000;
        margin-right: 12px;
      }
      
      /* Asegurar que el widget de ConveyThis sea visible */
      .conveythis-language-selector {
        display: inline-block !important;
      }
      
      /* Estilos para el contenedor de ConveyThis */
