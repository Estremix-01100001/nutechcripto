    <meta name="twitter:site" content="@nutechacademy" />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/nutechcripto/images/favicon3.mp4" as="video" type="video/mp4">
    <link rel="preload" href="/nutechcripto/images/fondoherosection.png" as="image">
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" as="style">
    <link rel="preload" href="https://randomuser.me/api/portraits/men/1.jpg" as="image">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "EducationalOrganization",
      "name": "Nutech Academy",
      "description": "Academia especializada en Inteligencia Artificial aplicada y transformaci√≥n digital",
      "url": "https://estremix-01100001.github.io/nutechcripto/",
      "logo": "https://estremix-01100001.github.io/nutechcripto/images/favicon.png",
      "image": "https://estremix-01100001.github.io/nutechcripto/images/fondoherosection.png",
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "PE"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": "Spanish"
      },
      "offers": {
        "@type": "Offer",
        "category": "Education",
        "description": "Cursos de Inteligencia Artificial aplicada"
      },
      "sameAs": [
        "https://www.linkedin.com/company/nutech-academy",
        "https://twitter.com/nutechacademy"
      ]
    }
    </script>
    
    <!-- ConveyThis Script Start -->
    <script src="https://cdn.conveythis.com/javascript/conveythis.js?api_key=pub_6a502f1f679556b35f2305f93f603776" is:inline></script>
    <!-- ConveyThis Script End -->
    
    <!-- JavaScript para el widget de idiomas -->
    <script is:inline>
      // Funciones globales para el widget de idiomas
      window.toggleLanguage = function() {
        const widget = document.querySelector('.language-widget');
        if (widget) {
          widget.classList.toggle('active');
        }
      }
      
      window.changeLanguage = function(lang) {
        console.log('üåê Cambiando idioma a:', lang);
        
        const selector = document.querySelector('.language-selector');
        const flag = selector?.querySelector('.flag');
        const text = selector?.querySelector('.text');
        
        if (flag && text) {
          if (lang === 'es') {
            flag.textContent = 'üá™üá∏';
            text.textContent = 'ES';
          } else if (lang === 'en') {
            flag.textContent = 'üá∫üá∏';
            text.textContent = 'EN';
          }
        }
        
        const widget = document.querySelector('.language-widget');
        if (widget) {
          widget.classList.remove('active');
        }
        
        // Notificaci√≥n simple
        console.log('Idioma cambiado a:', lang === 'es' ? 'Espa√±ol' : 'English');
      }
      
      // Inicializar cuando el DOM est√© listo
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üîÑ DOM cargado, inicializando widget de idiomas...');
        
        // Cerrar dropdown al hacer clic fuera
        document.addEventListener('click', function(event) {
          const widget = document.querySelector('.language-widget');
          if (widget && !widget.contains(event.target)) {
            widget.classList.remove('active');
          }
        });
        
        // Intentar ConveyThis como fallback
        setTimeout(() => {
          if (typeof window.conveyThis !== 'undefined' && window.conveyThis.init) {
            console.log('‚úÖ ConveyThis disponible, inicializando...');
            try {
              window.conveyThis.init({
                selector: '#conveythis-language-selector'
              });
            } catch (error) {
              console.error('‚ùå Error con ConveyThis:', error);
            }
          }
        }, 2000);
      });
    </script>
    
    <!-- CSS para el widget de idiomas -->
    <style>
      /* Widget de idiomas personalizado con estilo Nutech */
      .language-widget {
        position: relative;
        margin-right: 12px;
      }
      
      .language-selector {
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.15), rgba(251, 146, 60, 0.15));
        border: 1px solid rgba(249, 115, 22, 0.3);
        border-radius: 16px;
        padding: 10px 18px;
        color: #ffffff;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 10px;
        min-width: 90px;
        justify-content: center;
        user-select: none;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 15px rgba(249, 115, 22, 0.2);
      }
      
      .language-selector:hover {
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.25), rgba(251, 146, 60, 0.25));
        border-color: rgba(249, 115, 22, 0.5);
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 8px 25px rgba(249, 115, 22, 0.3);
      }
      
      .language-selector .flag {
        font-size: 18px;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
      }
      
      .language-selector .text {
        font-weight: 700;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
      }
      
      .language-selector .arrow {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: #ffffff;
        filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
      }
      
      .language-widget.active .arrow {
        transform: rotate(180deg);
      }
      
      .language-widget.active .language-selector {
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.3), rgba(251, 146, 60, 0.3));
        border-color: rgba(249, 115, 22, 0.6);
        box-shadow: 0 8px 25px rgba(249, 115, 22, 0.4);
      }
      
      .language-dropdown {
        position: absolute;
        top: calc(100% + 8px);
        left: 0;
        right: 0;
        background: linear-gradient(135deg, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.95));
        border: 1px solid rgba(249, 115, 22, 0.3);
        border-radius: 16px;
        padding: 12px 0;
        margin-top: 4px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-15px) scale(0.95);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1000;
        backdrop-filter: blur(20px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(249, 115, 22, 0.1);
      }
      
      .language-widget.active .language-dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateY(0) scale(1);
      }
      
      .language-option {
        padding: 12px 20px;
        color: #ffffff;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 12px;
        position: relative;
        font-weight: 500;
      }
      
      .language-option:hover {
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(251, 146, 60, 0.2));
        transform: translateX(4px);
      }
      
      .language-option:first-child {
        border-radius: 12px 12px 0 0;
      }
      
      .language-option:last-child {
        border-radius: 0 0 12px 12px;
      }
      
      .language-option .flag {
        font-size: 18px;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
      }
      
      .language-option .text {
        font-weight: 600;
        letter-spacing: 0.3px;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
      }
      
      /* Efecto de brillo en hover */
      .language-option::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 0;
        background: linear-gradient(90deg, transparent, rgba(249, 115, 22, 0.3), transparent);
        transition: width 0.3s ease;
      }
      
      .language-option:hover::before {
        width: 100%;
      }
      
      /* Asegurar que el contenedor sea visible */
      #conveythis-language-selector {
        display: block !important;
        visibility: visible !important;
        opacity: 1 !important;
        position: relative !important;
        width: auto !important;
        height: auto !important;
      }
      
      /* Animaci√≥n de entrada */
      @keyframes slideInFromTop {
        from {
          opacity: 0;
          transform: translateY(-20px) scale(0.9);
        }
        to {
          opacity: 1;
          transform: translateY(0) scale(1);
        }
      }
      
      .language-dropdown {
        animation: slideInFromTop 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
    </style>
    
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <slot />
    
  </body>
</html>