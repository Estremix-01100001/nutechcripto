    <meta name="twitter:site" content="@nutechacademy" />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/nutechcripto/images/favicon3.mp4" as="video" type="video/mp4">
    <link rel="preload" href="/nutechcripto/images/fondoherosection.png" as="image">
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" as="style">
    <link rel="preload" href="https://randomuser.me/api/portraits/men/1.jpg" as="image">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "EducationalOrganization",
      "name": "Nutech Academy",
      "description": "Academia especializada en Inteligencia Artificial aplicada y transformaci√≥n digital",
      "url": "https://estremix-01100001.github.io/nutechcripto/",
      "logo": "https://estremix-01100001.github.io/nutechcripto/images/favicon.png",
      "image": "https://estremix-01100001.github.io/nutechcripto/images/fondoherosection.png",
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "PE"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": "Spanish"
      },
      "offers": {
        "@type": "Offer",
        "category": "Education",
        "description": "Cursos de Inteligencia Artificial aplicada"
      },
      "sameAs": [
        "https://www.linkedin.com/company/nutech-academy",
        "https://twitter.com/nutechacademy"
      ]
    }
    </script>
    
    <!-- ConveyThis Script Start -->
    <script src="https://cdn.conveythis.com/javascript/conveythis.js?api_key=pub_6a502f1f679556b35f2305f93f603776" is:inline></script>
    <!-- ConveyThis Script End -->
    
    <!-- JavaScript para el widget de idiomas -->
    <script is:inline>
      // Funciones para el widget de idiomas
      function toggleLanguage() {
        const widget = document.querySelector('.language-widget');
        widget.classList.toggle('active');
      }
      
      function changeLanguage(lang) {
        console.log('üåê Cambiando idioma a:', lang);
        
        // Actualizar el selector visual
        const selector = document.querySelector('.language-selector');
        const flag = selector.querySelector('.flag');
        const text = selector.querySelector('.text');
        
        if (lang === 'es') {
          flag.textContent = 'üá™üá∏';
          text.textContent = 'ES';
        } else if (lang === 'en') {
          flag.textContent = 'üá∫üá∏';
          text.textContent = 'EN';
        }
        
        // Cerrar el dropdown
        const widget = document.querySelector('.language-widget');
        widget.classList.remove('active');
        
        // Aqu√≠ puedes agregar la l√≥gica de traducci√≥n real
        // Por ahora solo mostramos un mensaje
        alert('Idioma cambiado a: ' + (lang === 'es' ? 'Espa√±ol' : 'English'));
      }
      
      // Cerrar dropdown al hacer clic fuera
      document.addEventListener('click', function(event) {
        const widget = document.querySelector('.language-widget');
        if (!widget.contains(event.target)) {
          widget.classList.remove('active');
        }
      });
      
      // Configuraci√≥n de ConveyThis como fallback
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üîÑ DOM cargado, configurando ConveyThis...');
        
        function initConveyThis() {
          console.log('üîç Verificando ConveyThis...');
          console.log('ConveyThis disponible:', typeof window.conveyThis !== 'undefined');
          
          if (typeof window.conveyThis !== 'undefined' && window.conveyThis.init) {
            console.log('‚úÖ ConveyThis disponible, inicializando...');
            
            try {
              // Configuraci√≥n m√≠nima para ConveyThis
              window.conveyThis.init({
                selector: '#conveythis-language-selector'
              });
              console.log('‚úÖ ConveyThis configurado exitosamente');
            } catch (error) {
              console.error('‚ùå Error configurando ConveyThis:', error);
            }
          } else {
            console.log('‚ö†Ô∏è ConveyThis no disponible, usando widget personalizado');
          }
        }
        
        // Intentar ConveyThis despu√©s de un delay
        setTimeout(initConveyThis, 2000);
      });
    </script>
    
    <!-- CSS para el widget de idiomas -->
    <style>
      /* Widget de idiomas personalizado */
      .language-widget {
        position: relative;
        margin-right: 12px;
      }
      
      .language-selector {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        padding: 8px 16px;
        color: #ffffff;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        min-width: 80px;
        justify-content: center;
        user-select: none;
      }
      
      .language-selector:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
        transform: scale(1.05);
      }
      
      .language-selector .flag {
        font-size: 16px;
      }
      
      .language-selector .text {
        font-weight: 500;
      }
      
      .language-selector .arrow {
        transition: transform 0.3s ease;
        color: #ffffff;
      }
      
      .language-widget.active .arrow {
        transform: rotate(180deg);
      }
      
      .language-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        padding: 8px 0;
        margin-top: 4px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: all 0.3s ease;
        z-index: 1000;
        backdrop-filter: blur(10px);
      }
      
      .language-widget.active .language-dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
      }
      
      .language-option {
        padding: 8px 16px;
        color: #ffffff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      
      .language-option:hover {
        background: rgba(255, 255, 255, 0.1);
      }
      
      .language-option .flag {
        font-size: 16px;
      }
      
      .language-option .text {
        font-weight: 500;
      }
      
      /* Asegurar que el contenedor sea visible */
      #conveythis-language-selector {
        display: block !important;
        visibility: visible !important;
        opacity: 1 !important;
        position: relative !important;
        width: auto !important;
        height: auto !important;
      }
    </style>
    
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <slot />
    
  </body>
</html>