      ]
    }
    </script>
    
    <!-- ConveyThis Script Start -->
    <script src="https://cdn.conveythis.com/javascript/conveythis.js?api_key=pub_6a502f1f679556b35f2305f93f603776" is:inline></script>
    <!-- ConveyThis Script End -->
    
    <!-- JavaScript para ConveyThis -->
    <script is:inline>
      // Inicializar ConveyThis cuando el DOM est√© listo
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üîÑ Inicializando ConveyThis...');
        
        // Esperar a que ConveyThis est√© disponible
        setTimeout(() => {
          if (typeof window.conveyThis !== 'undefined' && window.conveyThis.init) {
            console.log('‚úÖ ConveyThis disponible, inicializando...');
            try {
              window.conveyThis.init({
                selector: '#conveythis-language-selector'
              });
              console.log('‚úÖ ConveyThis inicializado correctamente');
            } catch (error) {
              console.error('‚ùå Error con ConveyThis:', error);
            }
          } else {
            console.log('‚ö†Ô∏è ConveyThis no disponible, reintentando...');
            // Reintentar despu√©s de 3 segundos
            setTimeout(() => {
              if (typeof window.conveyThis !== 'undefined' && window.conveyThis.init) {
                try {
                  window.conveyThis.init({
                    selector: '#conveythis-language-selector'
                  });
                  console.log('‚úÖ ConveyThis inicializado en segundo intento');
                } catch (error) {
                  console.error('‚ùå Error en segundo intento con ConveyThis:', error);
