<style>
  /* Animación de bucle infinito perfecto */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-scroll {
    animation: scroll 20s linear infinite;
    width: 200%; /* Doble ancho para bucle perfecto */
    display: flex;
  }
  
  /* Asegurar que no hay espacios entre logos */
  .animate-scroll .company-logo {
    flex-shrink: 0;
    margin: 0 1rem;
  }
  
  /* Contenedor del carrusel */
  .overflow-hidden {
    position: relative;
  }
  
  /* Asegurar bucle perfecto */
  .animate-scroll {
    will-change: transform;
  }
  
  /* Sin pausa en hover para movimiento infinito */
  .animate-scroll:hover {
    animation-play-state: running;
  }
  
  /* Estilos para logos */
  .company-logo {
    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
  }
  
  .company-logo:hover {
    transform: translateY(-4px);
   
    background-color: rgba(153, 150, 148, 0.1);
  }
</style>
