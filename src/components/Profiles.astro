---
// Astro component

// Datos de configuración
const profilesConfig = {
    badge: {
      text: "Perfiles",
      icon: "pulse"
    },
    title: {
      main: "Formamos al talento que lidera la transformación digital",
      description: "Cada curso incluye proyectos prácticos, mentoría personalizada y certificado verificable. Aprende haciendo, no solo viendo."
    },
    profiles: [
      {
        type: "exalumnos",
        title: "Exalumnos Nutech Academy",
        image: "https://randomuser.me/api/portraits/men/7.jpg",
        achievements: [
          "500+ profesionales formados en Latinoamérica y España",
          "95% obtuvieron empleo en los primeros 3 meses",
          "Salario promedio aumentó 40% post-graduación",
          "Trabajan en empresas Fortune 500"
        ]
      },
      {
        type: "b2b",
        title: "B2B (Business to Business)",
        image: "https://randomuser.me/api/portraits/men/9.jpg",
        achievements: [
          "50+ empresas transformadas con IA",
          "ROI promedio del 300% en automatización",
          "Reducción de costos operativos del 25%",
          "Implementación exitosa en 6 meses"
        ]
      }
    ],
    impact: {
      title: "Impacto Real",
      stats: [
        {
          value: "500+",
          label: "Profesionales capacitados"
        },
        {
          value: "50+",
          label: "Empresas transformadas"
        },
        {
          value: "95%",
          label: "Satisfacción garantizada"
        }
      ]
    },
    cta: {
      title: "¿Listo para transformar tu carrera?",
      description: "Únete a los profesionales que ya lideran la transformación digital en sus empresas",
      button: {
        text: "Comenzar ahora",
        action: "startTransformation()"
      }
    }
  };
---

<section id="perfiles" class="py-16 sm:py-20 lg:py-24 relative" style="background: linear-gradient(90deg, #000000 0%, #111111 50%, #000000 100%);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-30">
    <!-- Badge de perfiles -->
    <div class="text-center mb-6">
      <button class="inline-flex items-center space-x-2 border border-orange-500 text-orange-500 px-6 py-3 rounded-full text-sm font-bold bg-orange-500/10 hover:bg-orange-500 hover:text-white transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-orange-500/50">
        <div class="w-2 h-2 bg-orange-500 rounded-full animate-pulse" aria-hidden="true"></div>
        <span>{profilesConfig.badge.text}</span>
      </button>
    </div>

    <!-- Título principal -->
    <div class="text-center mb-6">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-3">
        {profilesConfig.title.main}
      </h2>
      <p class="text-lg sm:text-xl text-white/80 max-w-4xl mx-auto leading-relaxed">
        {profilesConfig.title.description}
      </p>
    </div>

    <!-- Sección de perfiles (2 columnas arriba) -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-12">
      {profilesConfig.profiles.map((profile, index) => (
        <div class="bg-gray-800 rounded-2xl p-4 border border-gray-700 hover:border-orange-400/50 transition-all duration-300 hover:scale-105 group">
          <div class="text-center mb-3">
            <div class="w-14 h-14 mx-auto mb-2 rounded-full overflow-hidden border-4 border-orange-400/30 group-hover:border-orange-400/60 transition-colors duration-300">
              <img 
                src={profile.image} 
                alt={profile.title}
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
                width="80"
                height="80"
            />
          </div>
            <h3 class="text-white text-base font-bold mb-2">{profile.title}</h3>
          </div>
          
          <div class="space-y-8">
            {profile.achievements.map((achievement, achievementIndex) => (
              <div class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-orange-400 rounded-full mt-1.5 flex-shrink-0" aria-hidden="true"></div>
                <div>
                  <h4 class="text-white font-semibold text-sm mb-0.5">{achievement.split(' ').slice(0, 3).join(' ')}</h4>
                  <p class="text-white/70 text-xs">{achievement}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Sección de Industrias y Especialidades -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
      <!-- Bloque de Industrias -->
      <div class="space-y-4">
        <!-- Título de la sección -->
        <div class="mb-8">
          <h2 class="text-white text-xl font-bold mb-2">Industrias</h2>
          <p class="text-white/50 text-sm">Sectores donde aplicamos nuestras soluciones</p>
        </div>

        <!-- Lista de industrias con marcos -->
        <div class="space-y-4">
          <!-- Bloque de Banca y Finanzas -->
          <div class="bg-gray-800 rounded-xl p-6 border border-gray-600 hover:border-orange-400 hover:shadow-lg hover:shadow-orange-400/20 transition-all duration-300 hover:scale-105 cursor-pointer">
            <div class="flex items-center space-x-4 mb-4">
              <div class="w-12 h-12 bg-orange-400 rounded-full flex items-center justify-center border-2 border-orange-200">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"></path>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-white text-xl font-bold">Banca y Finanzas</h3>
                <p class="text-white/50 text-sm">Automatización de procesos financieros</p>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-gray-700 rounded-xl p-3 text-center">
                <div class="text-orange-400 font-bold text-lg">500+</div>
                <div class="text-white text-xs">Procesos automatizados</div>
              </div>
              <div class="bg-gray-700 rounded-xl p-3 text-center">
                <div class="text-orange-400 font-bold text-lg">98%</div>
                <div class="text-white text-xs">Reducción de errores</div>
              </div>
            </div>
          </div>

          <!-- Bloque de Sector Público -->
          <div class="bg-gray-800 rounded-xl p-6 border border-gray-600 hover:border-orange-400 hover:shadow-lg hover:shadow-orange-400/20 transition-all duration-300 hover:scale-105 cursor-pointer">
            <div class="flex items-center space-x-4 mb-4">
              <div class="w-12 h-12 bg-orange-400 rounded-full flex items-center justify-center border-2 border-orange-200">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-6a1 1 0 00-1-1H9a1 1 0 00-1 1v6a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-white text-xl font-bold">Sector Público</h3>
                <p class="text-white/50 text-sm">Transformación digital gubernamental</p>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-gray-700 rounded-xl p-3 text-center">
                <div class="text-orange-400 font-bold text-lg">50+</div>
                <div class="text-white text-xs">Instituciones</div>
              </div>
              <div class="bg-gray-700 rounded-xl p-3 text-center">
                <div class="text-orange-400 font-bold text-lg">75%</div>
                <div class="text-white text-xs">Eficiencia mejorada</div>
              </div>
            </div>
          </div>

          <!-- Otras industrias -->
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-gray-800 rounded-xl p-4 border border-gray-600 hover:border-orange-500 hover:shadow-lg hover:shadow-orange-500/20 transition-all duration-300 hover:scale-105 cursor-pointer">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center border-2 border-orange-300">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1h-6a1 1 0 01-1-1V8z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-white font-medium">Consumo Masivo</span>
              </div>
            </div>

            <div class="bg-gray-800 rounded-xl p-4 border border-gray-600 hover:border-orange-500 hover:shadow-lg hover:shadow-orange-500/20 transition-all duration-300 hover:scale-105 cursor-pointer">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center border-2 border-orange-300">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-white font-medium">Tecnología y Servicios</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Bloque de Especialidades -->
      <div class="space-y-4">
        <!-- Título de la sección -->
        <div class="mb-8">
          <h2 class="text-white text-xl font-bold mb-2">Especialidades</h2>
          <p class="text-white/50 text-sm">Áreas de expertise y conocimiento especializado</p>
        </div>

        <!-- Lista de especialidades con marcos -->
        <div class="space-y-4">
          <!-- PM, RPA y Workflow -->
          <div class="bg-gray-800 rounded-xl p-4 border border-gray-600 hover:border-orange-500 hover:shadow-lg hover:shadow-orange-500/20 transition-all duration-300 hover:scale-105 cursor-pointer">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center border-2 border-orange-300">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1h-6a1 1 0 01-1-1V8z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-white text-lg font-medium">PM, RPA y Workflow</span>
            </div>
          </div>

          <!-- ISO 27001 y Ciberseguridad -->
          <div class="bg-gray-800 rounded-xl p-4 border border-gray-600 hover:border-orange-500 hover:shadow-lg hover:shadow-orange-500/20 transition-all duration-300 hover:scale-105 cursor-pointer">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center border-2 border-orange-300">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-white text-lg font-medium">ISO 27001 y Ciberseguridad</span>
            </div>
          </div>

          <!-- Estrategias de Transformación Digital -->
          <div class="bg-gray-800 rounded-xl p-4 border border-gray-600 hover:border-orange-500 hover:shadow-lg hover:shadow-orange-500/20 transition-all duration-300 hover:scale-105 cursor-pointer">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center border-2 border-orange-300">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-white text-lg font-medium">Estrategias de Transformación Digital</span>
        </div>
      </div>

          <!-- Automatización e Inteligencia Artificial -->
          <div class="bg-gray-800 rounded-xl p-4 border border-gray-600 hover:border-orange-500 hover:shadow-lg hover:shadow-orange-500/20 transition-all duration-300 hover:scale-105 cursor-pointer">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center border-2 border-orange-300">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-white text-lg font-medium">Automatización e Inteligencia Artificial</span>
          </div>
        </div>
      </div>
    </div>
    </div>


  </div>
</section>
