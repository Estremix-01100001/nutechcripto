    const countriesData = {
      'US': { name: 'Estados Unidos', info: 'Sede principal en Silicon Valley. M√°s de 200 estudiantes activos.', codes: ['US', 'usa', 'united-states', 'estados-unidos', 'united states', 'america', 'us', 'united', 'states'] },
