// Astro component
---

<section id="especialidades" class="py-16 sm:py-20 lg:py-24 bg-gradient-to-br from-gray-900 via-black to-gray-800 relative">
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Contenido principal -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 mb-16">
      <!-- Bloque de Industrias -->
      <div class="space-y-6">

        <!-- Título de la sección -->
        <div class="mb-6">
          <h2 class="text-white text-2xl font-bold mb-2">Industrias</h2>
          <p class="text-gray-400 text-sm">Sectores donde aplicamos nuestras soluciones</p>
        </div>

        <!-- Lista de industrias con marcos -->
        <div class="space-y-6">
          <!-- Bloque de Banca y Finanzas -->
          <div class="bg-gray-800 rounded-xl p-6 border border-gray-600 hover:border-orange-500 transition-all duration-300">
            <div class="flex items-center space-x-4 mb-4">
              <div class="w-12 h-12 bg-orange-500 rounded-full flex items-center justify-center border-2 border-orange-300">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"></path>
