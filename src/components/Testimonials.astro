                        src={testimonial.image} 
                        alt={`Foto de perfil de ${testimonial.name}, ${testimonial.role} en ${testimonial.company}`}
                        class="w-full h-full object-cover"
                        loading="lazy"
                        decoding="async"
                        width="64"
                        height="64"
                        onerror="this.src='https://ui-avatars.com/api/?name='+encodeURIComponent(this.alt)+'&background=6b7280&color=fff&size=150&bold=true'"
