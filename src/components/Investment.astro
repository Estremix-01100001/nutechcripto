---
// Astro component

// Datos de configuración
const investmentConfig = {
    badge: {
      text: "Inversión protegida",
      icon: "pulse"
    },
    title: {
      main: "Tu inversión está 100% protegida",
      description: "Creemos tanto en nuestro programa que te damos estas garantías"
    },
    cards: [
      {
        id: "garantias",
        title: "Garantías",
        icon: "shield",
        features: [
          {
            title: "30 días de garantía",
            description: "Devolución 100% si no estás satisfecho"
          },
          {
            title: "Garantía de empleo",
            description: "Te ayudamos a conseguir trabajo o te devolvemos tu dinero"
          },
          {
            title: "Soporte de por vida",
            description: "Acceso permanente a la comunidad y actualizaciones"
          }
        ]
      },
      {
        id: "pagos",
        title: "Métodos de pago",
        icon: "credit-card",
        methods: [
          { name: "Visa", logo: "visa" },
          { name: "Mastercard", logo: "mastercard" },
          { name: "PayPal", logo: "paypal" },
          { name: "Bitcoin", logo: "bitcoin" }
        ],
        secure: {
          title: "Pago 100% seguro",
          description: "Tus datos están protegidos con encriptación SSL"
        }
      },
      {
        id: "financiamiento",
        title: "Opciones de financiamiento",
        icon: "calculator",
        options: [
          {
            title: "Pago único",
            discount: "20% descuento",
            description: "Ahorra $200 pagando de una vez"
          },
          {
            title: "3 cuotas sin interés",
            discount: "Sin intereses",
            description: "Paga en 3 meses sin costo adicional"
          },
          {
            title: "Plan extendido",
            discount: "6 cuotas",
            description: "Hasta 6 meses para completar el pago"
          }
        ]
      }
    ],
    cta: {
      title: "¿Listo para invertir en tu futuro?",
      description: "Únete a los profesionales que ya transformaron sus carreras con IA",
      button: {
        text: "Comenzar ahora",
        action: "startInvestment()"
      }
    }
  };
---

<section id="inversion" class="py-16 sm:py-20 lg:py-24 relative overflow-hidden" style="background: linear-gradient(90deg, #000000 0%, #111111 50%, #000000 100%);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-30">
    <!-- Badge de inversión -->
    <div class="text-center mb-12">
      <button class="inline-flex items-center space-x-2 border border-orange-500 text-orange-500 px-6 py-3 rounded-full text-sm font-bold bg-orange-500/10 hover:bg-orange-500 hover:text-white transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-orange-500/50">
        <div class="w-2 h-2 bg-orange-500 rounded-full animate-pulse" aria-hidden="true"></div>
        <span>{investmentConfig.badge.text}</span>
      </button>
    </div>

    <!-- Título principal -->
    <div class="text-center mb-16">
      <h2 class="text-white text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
        {investmentConfig.title.main}
      </h2>
      <p class="text-white/80 text-lg sm:text-xl max-w-4xl mx-auto leading-relaxed">
        {investmentConfig.title.description}
      </p>
    </div>

    <!-- Grid principal con 3 columnas -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
      
      <!-- Garantías -->
      <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 hover:border-orange-400/50 hover:scale-105 transition-all duration-300 cursor-pointer">
        <div class="text-center mb-6">
          <div class="w-12 h-12 bg-orange-500/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-white text-xl font-bold mb-4">{investmentConfig.cards[0].title}</h3>
        </div>
        
        <div class="space-y-4">
          {investmentConfig.cards[0].features.map((feature, index) => (
            <div class="flex items-start space-x-3 hover:bg-gray-700/20 hover:scale-105 transition-all duration-300 cursor-pointer p-2 rounded-lg">
              <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0" aria-hidden="true"></div>
              <div>
                <h4 class="text-white font-semibold text-sm mb-1">{feature.title}</h4>
                <p class="text-white/70 text-xs">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Métodos de pago -->
      <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 hover:border-orange-400/50 hover:scale-105 transition-all duration-300 cursor-pointer">
        <div class="text-center mb-6">
          <div class="w-12 h-12 bg-orange-500/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"></path>
            </svg>
          </div>
          <h3 class="text-white text-xl font-bold mb-4">{investmentConfig.cards[1].title}</h3>
        </div>
        
        <div class="grid grid-cols-2 gap-3 mb-6">
          {investmentConfig.cards[1].methods.map((method, index) => (
            <div class="bg-gray-700/50 rounded-lg p-3 text-center hover:bg-gray-600/50 hover:scale-105 transition-all duration-300 cursor-pointer">
              <div class="w-8 h-8 mx-auto mb-2 flex items-center justify-center" aria-hidden="true">
                {method.logo === 'visa' && (
                  <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none">
                    <rect width="24" height="16" rx="2" fill="#1A1F71"/>
                    <text x="12" y="11" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="8" font-weight="bold">VISA</text>
                  </svg>
                )}
                {method.logo === 'mastercard' && (
                  <svg class="w-6 h-6" viewBox="0 0 24 16" fill="none">
                    <rect width="24" height="16" rx="2" fill="#EB001B"/>
                    <circle cx="9" cy="8" r="6" fill="#F79E1B"/>
                    <circle cx="15" cy="8" r="6" fill="#FF5F00"/>
                    <path d="M12 2C10.5 4 10.5 12 12 14C13.5 12 13.5 4 12 2Z" fill="#EB001B"/>
                  </svg>
                )}
                {method.logo === 'paypal' && (
                  <svg class="w-6 h-6" viewBox="0 0 24 16" fill="none">
                    <rect width="24" height="16" rx="2" fill="#0070BA"/>
                    <text x="12" y="10" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="6" font-weight="bold">PayPal</text>
                  </svg>
                )}
                {method.logo === 'bitcoin' && (
                  <svg class="w-6 h-6" viewBox="0 0 24 16" fill="none">
                    <rect width="24" height="16" rx="2" fill="#F7931A"/>
                    <text x="12" y="10" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="8" font-weight="bold">₿</text>
                  </svg>
                )}
              </div>
              <div class="text-white font-bold text-sm">{method.name}</div>
            </div>
          ))}
        </div>
        
        <div class="bg-orange-500/10 border border-orange-500/30 rounded-lg p-4 text-center">
          <div class="flex items-center justify-center space-x-2 mb-2">
            <svg class="w-4 h-4 text-orange-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-orange-500 font-semibold text-sm">{investmentConfig.cards[1].secure.title}</span>
          </div>
          <p class="text-white/70 text-xs">{investmentConfig.cards[1].secure.description}</p>
        </div>
      </div>

      <!-- Opciones de financiamiento -->
      <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 hover:border-orange-400/50 hover:scale-105 transition-all duration-300 cursor-pointer">
        <div class="text-center mb-6">
          <div class="w-12 h-12 bg-orange-500/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"></path>
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-white text-xl font-bold mb-4">{investmentConfig.cards[2].title}</h3>
        </div>
        
        <div class="space-y-4">
          {investmentConfig.cards[2].options.map((option, index) => (
            <div class="bg-gray-700/30 border border-gray-600 rounded-lg p-4 hover:bg-gray-600/30 hover:border-orange-400 hover:scale-105 transition-all duration-300 cursor-pointer">
              <div class="flex items-center justify-between mb-2">
                <h4 class="text-white font-semibold text-sm">{option.title}</h4>
                <span class="bg-orange-500 text-white text-xs px-2 py-1 rounded-full">{option.discount}</span>
              </div>
              <p class="text-white/70 text-xs">{option.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- CTA principal -->
    <div class="text-center">
      <div class="bg-gradient-to-r from-orange-500/10 to-orange-600/10 border border-orange-500/30 rounded-2xl p-8 max-w-2xl mx-auto hover:scale-105 transition-all duration-300 cursor-pointer">
        <h3 class="text-white text-2xl font-bold mb-4">{investmentConfig.cta.title}</h3>
        <p class="text-white/80 text-lg mb-6">{investmentConfig.cta.description}</p>
        <button 
          onclick={investmentConfig.cta.button.action}
          class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-8 py-4 rounded-xl font-bold text-lg hover:from-orange-600 hover:to-orange-700 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-orange-500/25 focus:outline-none focus:ring-2 focus:ring-orange-500/50"
        >
          {investmentConfig.cta.button.text}
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  // Función para el CTA de inversión
  function startInvestment() {
    // Navegar a la sección de inversión para mostrar las opciones
    scrollToSection('inversion');
    
    // Efecto visual para destacar la sección
    setTimeout(() => {
      const investmentSection = document.getElementById('inversion');
      if (investmentSection) {
        investmentSection.style.transform = 'scale(1.02)';
        investmentSection.style.boxShadow = '0 0 30px rgba(249, 115, 22, 0.3)';
        investmentSection.style.transition = 'all 0.5s ease';
        
        setTimeout(() => {
          investmentSection.style.transform = 'scale(1)';
          investmentSection.style.boxShadow = '';
        }, 2000);
      }
    }, 500);
  }

  // Función para scroll a secciones
  function scrollToSection(sectionId: string) {
    const element = document.getElementById(sectionId);
    if (element) {
      element.scrollIntoView({ 
        behavior: 'smooth', 
        block: 'start' 
      });
    }
  }

  // Hacer funciones globales
  (window as any).startInvestment = startInvestment;
  (window as any).scrollToSection = scrollToSection;
</script>